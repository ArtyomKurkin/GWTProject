<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="StyleSorting.css" field="style"/>
    <g:HTMLPanel>
        <div style="{style.divStyle}">
            <g:HorizontalPanel ui:field="vertPan">
                <g:Label text="Sort by:" styleName="{style.header1}"/>
                <g:ListBox ui:field="Combobox" styleName="{style.button}"/>
                <g:Button ui:field="sortBut" text="Sort" styleName="{style.button}"/>
            </g:HorizontalPanel>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>