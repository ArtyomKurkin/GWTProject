<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:date = 'urn:import:com.google.gwt.user.datepicker.client'>
<ui:style src="StyleOptions.css" field="style2"/>
    <g:HTMLPanel>
    <div style="{style2.divStyle}">
        <g:VerticalPanel>
            <g:Label text="Add new book:" styleName="{style2.header1}"/>
            <g:HorizontalPanel styleName="{style2.horpanel}">
                <g:Label text="Name of author:" styleName="{style2.text}"/>
                <g:TextBox ui:field="author" text="" styleName="{style2.fields}"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel styleName="{style2.horpanel}">
                <g:Label text="Title of the book:" styleName="{style2.text}"/>
                <g:TextBox ui:field="title" text="" styleName="{style2.fields}"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel styleName="{style2.horpanel}">
                <g:Label text="Number of pages:" styleName="{style2.text}"/>
                <g:TextBox ui:field="pages" text="" styleName="{style2.fields}"/>
            </g:HorizontalPanel >
            <g:HorizontalPanel styleName="{style2.horpanel}">
                <g:Label text="Year of creating:" styleName="{style2.text}"/>
                <g:TextBox ui:field="year" text="" styleName="{style2.fields}"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel styleName="{style2.horpanel}">
                <g:Label text="Date of adding:" styleName="{style2.text}"/>
                <date:DatePicker ui:field="date" styleName="{style2.fields}"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel styleName="{style2.horpanel}">
                <g:Button ui:field="add" text="Add" styleName="{style2.button-ad}"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel styleName="{style2.horpanel}">
                <g:Label text="ID of corrected book:" styleName="{style2.text}"/>
                <g:TextBox ui:field="num_cor" styleName="{style2.fields}"/>
                <g:Button ui:field="edit" text="Edit" styleName="{style2.button}"/>
                <g:Button ui:field="delete" text="Delete" styleName="{style2.button}"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel styleName="{style2.horpanel}">
                <g:Label ui:field="statusInfo" text="" styleName="{style2.info}"/>
            </g:HorizontalPanel>
        </g:VerticalPanel>
    </div>
    </g:HTMLPanel>
</ui:UiBinder>